{
  "devDependencies": {
    "tailwindcss": "^3.4.1",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11"
  },
  "scripts": {
    "tailwind:watch": "tailwindcss -i ./styles/tailwind.css -o ./assets/main.css --watch",
    "tailwind:prod": "tailwindcss -o ./assets/main.css --minify",
    "format": "prettier --write --ignore-unknown ."
  }
}
